<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiSummer25.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiSummer25.Views"
    Title="MauiSummer25">

    <!--
        ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="MainPage" /
    -->


    <!--
        ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:RegistrationPage}"
        Route="MainPage" /
    -->

    <Shell.TitleView>
        <HorizontalStackLayout>
            <Button
                Margin="5"
                BackgroundColor="Wheat"
                Command="{Binding LogoutCommand}"
                FontSize="Body"
                HeightRequest="60"
                HorizontalOptions="Start"
                Text="בדיקה"
                WidthRequest="80" />
            <Button
                Command="{Binding UserProfilCommand}"
                FontSize="Body"
                HeightRequest="60"
                HorizontalOptions="End"
                Text="הפרופיל שלי"
                WidthRequest="120" />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <Tab Title="משתמש חדש" Icon="add.png">
        <ShellContent
            Title="הוסף משתמש"
            ContentTemplate="{DataTemplate local:RegistrationPage}"
            Icon="add.png"
            Route="RegistrationPage" />

    </Tab>
    <Tab Title="משתמשים" Icon="profile.png">
        <ShellContent
            Title="משתמשים"
            ContentTemplate="{DataTemplate local:UserList}"
            Icon="view.png"
            Route="UserList" />
    </Tab>
</Shell>
